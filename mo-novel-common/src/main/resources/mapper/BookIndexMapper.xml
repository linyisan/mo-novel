<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heng.mapper.BookIndexMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.heng.entity.BookIndex">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="book_id" property="bookId" />
        <result column="word_count" property="wordCount" />
        <result column="title" property="title" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_time, update_time, book_id, word_count, title, status
    </sql>
    <select id="selectLastBookIndex" resultType="com.heng.entity.BookIndex">
        SELECT
        <include refid="Base_Column_List"/>
        FROM `t_book_index`
        <trim prefix="where" suffixOverrides="and">
            status=1
            <if test="bookId!= null">AND book_id=#{bookId}</if>
        </trim>
        ORDER BY create_time DESC LIMIT 1
    </select>

</mapper>
